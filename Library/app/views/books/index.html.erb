<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Year</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.category %></td>
        <td><%= book.year %></td>
        <td>
          <%= link_to(book, class: 'text-decoration-none') do %> <i class="fa fa-solid fa-eye"></i> <% end %>
          <%= link_to edit_book_path(book), class: 'text-decoration-none' do %><i class="fa fa-regular fa-pen-to-square"></i> <% end %>
          <%= link_to book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none' do %> <i class="fa fa-solid fa-trash-can"></i> <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: 'btn btn-outline-success' %>
